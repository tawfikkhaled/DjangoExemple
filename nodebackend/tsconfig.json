{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/",
        "lib": [
            "es5",
            "es2015.core",
            "es2015.promise",
            "es2015.collection",
            "dom"
        ],
        "module": "commonjs",
        "jsx": "preserve"
    },
    "exclude": [
        "node_modules"
    ]
}